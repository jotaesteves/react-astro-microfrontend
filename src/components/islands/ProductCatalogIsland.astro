---
// This Astro component acts as a server island for the ProductCatalog microfrontend
export interface Props {
  category?: string;
  limit?: number;
}

const { category = "all", limit = 6 } = Astro.props;

// Server-side data fetching
const serverData = {
  category,
  limit,
  timestamp: new Date().toISOString(),
  serverRendered: true,
  // Could include pre-fetched product data here
  preloadedCategories: ["all", "electronics", "home", "sports"],
};
---

<div class="product-catalog-island" data-server-data={JSON.stringify(serverData)}>
  <div id={`product-catalog-${category}-${limit}`} class="min-h-[400px]">
    <!-- Loading state while React component loads -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-bold text-gray-800 mb-4">Product Catalog</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {
          Array.from({ length: limit }).map((_, i) => (
            <div class="border rounded-lg p-4 animate-pulse">
              <div class="w-full h-48 bg-gray-300 rounded mb-4" />
              <div class="h-4 bg-gray-300 rounded mb-2" />
              <div class="h-3 bg-gray-300 rounded w-20" />
            </div>
          ))
        }
      </div>
    </div>
  </div>
</div>

<style>
  .product-catalog-island {
    isolation: isolate;
  }
</style>
