---
// Notification Center Astro Island
import NotificationCenterComponent from "../react/NotificationCenter";

export interface Props {
  userId?: number;
  maxNotifications?: number;
}

const { userId = 1, maxNotifications = 5 } = Astro.props;
---

<!-- Client-side React component with client:load directive -->
<NotificationCenterComponent client:load userId={userId} maxNotifications={maxNotifications} />

<style>
  /* Scoped styles for notification center */
  :global(.notification-container) {
    max-height: 400px;
    overflow-y: auto;
  }
</style>
