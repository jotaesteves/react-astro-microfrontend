---
// Chat Widget Astro Island
import ChatWidgetComponent from "../react/ChatWidget";

export interface Props {
  title?: string;
}

const { title = "Customer Support" } = Astro.props;
---

<!-- Client-side React component with client:load directive -->
<ChatWidgetComponent client:load title={title} />

<style>
  /* Scoped styles for this island */
  :global(.chat-widget-container) {
    z-index: 9999;
  }
</style>
