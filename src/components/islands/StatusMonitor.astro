---
// System Status Monitor Astro Island
import StatusMonitorComponent from "../react/StatusMonitor";

export interface Props {
  services?: string[];
  refreshInterval?: number;
}

const { services = ["api", "database", "cache", "cdn"], refreshInterval = 30000 } = Astro.props;
---

<!-- Client-side React component with client:load directive -->
<StatusMonitorComponent client:load services={services} refreshInterval={refreshInterval} />

<style>
  /* Scoped styles for status monitor */
  :global(.status-indicator) {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  :global(.status-online) {
    animation: none;
  }
</style>
