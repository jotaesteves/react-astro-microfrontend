---
import Layout from "../layouts/Layout.astro";
import UserProfile from "../components/islands/UserProfile.astro";
import ProductCatalog from "../components/islands/ProductCatalog.astro";
import ChatWidget from "../components/islands/ChatWidget.astro";
import AnalyticsDashboard from "../components/islands/AnalyticsDashboard.astro";
import NotificationCenter from "../components/islands/NotificationCenter.astro";
import StatusMonitor from "../components/islands/StatusMonitor.astro";
---

<Layout title="Server Islands Architecture Demo">
  <main class="min-h-screen bg-gray-50 py-8">
    <div class="container mx-auto px-4">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Server Islands Microfrontend Architecture</h1>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto mb-6">
          This demonstrates Astro's server islands feature with React components acting as independent microfrontends.
          Each component loads asynchronously with fallback content, providing optimal performance and user experience.
        </p>

        <!-- Navigation -->
        <div class="flex justify-center space-x-4">
          <a
            href="/"
            class="inline-flex items-center px-6 py-3 bg-gray-500 text-white rounded-lg hover:bg-gray-600 transition-colors"
          >
            ‚Üê Basic Demo
          </a>
          <a
            href="/loading-strategies"
            class="inline-flex items-center px-6 py-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors"
          >
            Loading Strategies ‚Üí
          </a>
        </div>
      </div>

      <!-- Top Row: System Status and Notifications -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
        <section>
          <h2 class="text-2xl font-semibold text-gray-800 mb-4">System Status</h2>
          <StatusMonitor services={["api", "database", "cache", "cdn", "auth"]} refreshInterval={15000} />
        </section>

        <section>
          <h2 class="text-2xl font-semibold text-gray-800 mb-4">Notifications</h2>
          <NotificationCenter userId={1} maxNotifications={5} />
        </section>
      </div>

      <!-- Analytics Dashboard -->
      <section class="mb-8">
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">Analytics Dashboard</h2>
        <AnalyticsDashboard timeframe="7d" userId={1} />
      </section>

      <!-- User Management Section -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
        <section>
          <h2 class="text-2xl font-semibold text-gray-800 mb-4">User Management</h2>
          <UserProfile userId={1} />
        </section>

        <section>
          <h2 class="text-2xl font-semibold text-gray-800 mb-4">Another User Instance</h2>
          <UserProfile userId={2} />
        </section>
      </div>

      <!-- Product Catalog Section -->
      <section class="mb-8">
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">Product Catalog</h2>
        <ProductCatalog category="all" limit={6} />
      </section>

      <!-- Category-specific Product Catalogs -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
        <section>
          <h3 class="text-xl font-semibold text-gray-800 mb-4">Electronics</h3>
          <ProductCatalog category="electronics" limit={3} />
        </section>
        <section>
          <h3 class="text-xl font-semibold text-gray-800 mb-4">Sports Equipment</h3>
          <ProductCatalog category="sports" limit={3} />
        </section>
      </div>

      <!-- Architecture Features -->
      <div class="bg-white rounded-lg shadow-md p-8 mb-8">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Server Islands Architecture</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="text-center">
            <div class="bg-blue-100 p-4 rounded-lg mb-4">
              <svg class="w-8 h-8 text-blue-600 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"
                ></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-800 mb-2">Server Islands</h3>
            <p class="text-gray-600 text-sm">Async server-rendered components with fallback content</p>
          </div>

          <div class="text-center">
            <div class="bg-green-100 p-4 rounded-lg mb-4">
              <svg class="w-8 h-8 text-green-600 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                ></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-800 mb-2">Independent Deployment</h3>
            <p class="text-gray-600 text-sm">Each microfrontend can be deployed separately</p>
          </div>

          <div class="text-center">
            <div class="bg-purple-100 p-4 rounded-lg mb-4">
              <svg class="w-8 h-8 text-purple-600 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"
                ></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-800 mb-2">React Integration</h3>
            <p class="text-gray-600 text-sm">Seamless React component integration with Astro</p>
          </div>

          <div class="text-center">
            <div class="bg-orange-100 p-4 rounded-lg mb-4">
              <svg class="w-8 h-8 text-orange-600 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-800 mb-2">Fallback Content</h3>
            <p class="text-gray-600 text-sm">Skeleton loading states for better UX</p>
          </div>
        </div>
      </div>

      <!-- Performance Benefits -->
      <div class="bg-gradient-to-r from-blue-50 to-purple-50 rounded-lg p-8">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Performance Benefits</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div>
            <h3 class="font-semibold text-gray-800 mb-2">‚ö° Faster First Paint</h3>
            <p class="text-gray-600 text-sm">Page loads immediately with fallback content while components render</p>
          </div>
          <div>
            <h3 class="font-semibold text-gray-800 mb-2">üîÑ Async Loading</h3>
            <p class="text-gray-600 text-sm">Components load independently without blocking each other</p>
          </div>
          <div>
            <h3 class="font-semibold text-gray-800 mb-2">üì± Better UX</h3>
            <p class="text-gray-600 text-sm">Users see content immediately with smooth progressive enhancement</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Chat Widget (Fixed Position) -->
    <ChatWidget title="Support Chat" />
  </main>
</Layout>
