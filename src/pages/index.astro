---
import Layout from "../layouts/Layout.astro";
import UserProfile from "../components/islands/UserProfile.astro";
import ProductCatalog from "../components/islands/ProductCatalog.astro";
import ChatWidget from "../components/islands/ChatWidget.astro";
---

<Layout title="Microfrontend Demo">
  <main class="min-h-screen bg-gray-50 py-8">
    <div class="container mx-auto px-4">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Astro Microfrontend Demo</h1>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto mb-6">
          This demonstrates Astro's islands architecture with React components acting as independent microfrontends.
          Each component can be developed, deployed, and updated independently using client-side hydration.
        </p>

        <!-- Navigation -->
        <div class="flex justify-center space-x-4">
          <a
            href="/server-islands"
            class="inline-flex items-center px-6 py-3 bg-purple-500 text-white rounded-lg hover:bg-purple-600 transition-colors"
          >
            Server Islands Demo →
          </a>
          <a
            href="/loading-strategies"
            class="inline-flex items-center px-6 py-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors"
          >
            Loading Strategies →
          </a>
        </div>
      </div>

      <!-- Microfrontend Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-12">
        <!-- User Profile Microfrontend -->
        <section class="space-y-4">
          <h2 class="text-2xl font-semibold text-gray-800">User Management</h2>
          <p class="text-gray-600">Independent user profile microfrontend</p>
          <UserProfile userId={1} />
        </section>

        <!-- Another User Profile Instance -->
        <section class="space-y-4">
          <h2 class="text-2xl font-semibold text-gray-800">Another User</h2>
          <p class="text-gray-600">Same microfrontend, different data</p>
          <UserProfile userId={2} />
        </section>
      </div>

      <!-- Product Catalog Microfrontend -->
      <section class="mb-12">
        <div class="text-center mb-8">
          <h2 class="text-3xl font-semibold text-gray-800 mb-4">Product Catalog</h2>
          <p class="text-gray-600">Independent e-commerce microfrontend</p>
        </div>
        <ProductCatalog category="all" limit={6} />
      </section>

      <!-- Multiple Product Catalogs with Different Categories -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
        <section>
          <h3 class="text-xl font-semibold text-gray-800 mb-4">Electronics</h3>
          <ProductCatalog category="electronics" limit={3} />
        </section>
        <section>
          <h3 class="text-xl font-semibold text-gray-800 mb-4">Sports</h3>
          <ProductCatalog category="sports" limit={3} />
        </section>
      </div>

      <!-- Features Info -->
      <div class="bg-white rounded-lg shadow-md p-8 mb-8">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Microfrontend Features</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="text-center">
            <div class="bg-blue-100 p-4 rounded-lg mb-4">
              <svg class="w-8 h-8 text-blue-600 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                ></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-800 mb-2">Independent Deployment</h3>
            <p class="text-gray-600 text-sm">Each component can be deployed independently</p>
          </div>
          <div class="text-center">
            <div class="bg-green-100 p-4 rounded-lg mb-4">
              <svg class="w-8 h-8 text-green-600 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"
                ></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-800 mb-2">Astro Islands</h3>
            <p class="text-gray-600 text-sm">Client-side hydrated components for interactivity</p>
          </div>
          <div class="text-center">
            <div class="bg-purple-100 p-4 rounded-lg mb-4">
              <svg class="w-8 h-8 text-purple-600 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"
                ></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-800 mb-2">React Integration</h3>
            <p class="text-gray-600 text-sm">Seamless React component integration</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Chat Widget Microfrontend (Fixed Position) -->
    <ChatWidget title="Support Chat" />
  </main>
</Layout>
